  <script>
    /* ============================================================
       Configurações fáceis de personalização (sem backend)
       - goalBRL: meta fixa em reais (ex.: 3000)
       - raisedBRL: total arrecadado até agora (edite manualmente)
       - currency: formatação em pt-BR
       - A barra e os textos são atualizados automaticamente
       ============================================================ */
    const config = {
      goalBRL: 3000,      // Meta fixa: R$ 3.000,00
      raisedBRL: 0,       // Edite com o valor arrecadado (ex.: 1250)
      currency: new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' })
    };

    // Elementos de progresso
    const fillEl = document.getElementById('progress-fill');
    const textEl = document.getElementById('progress-text');
    const goalEl = document.getElementById('goal-value');

    // Atualiza valores exibidos
    function updateProgress() {
      const goal = config.goalBRL;
      const raised = Math.max(0, Math.min(config.raisedBRL, goal)); // limita entre 0 e meta
      const remaining = Math.max(0, goal - raised);
      const ratio = goal > 0 ? (raised / goal) : 0;

      fillEl.style.width = `${(ratio * 100).toFixed(2)}%`;
      goalEl.textContent = config.currency.format(goal);
      textEl.textContent = `Arrecadado: ${config.currency.format(raised)} • Faltam: ${config.currency.format(remaining)}`;
    }

    // Copiar Pix para área de transferência com feedback
    const pixInput = document.getElementById('pix-key');
    const copyBtn = document.getElementById('btn-copy');

    function copyPix() {
      const key = pixInput.value.trim();
      if (!key) return;

      // Tenta Clipboard moderno; fallback para seleção + execCommand
      if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(key).then(() => {
          showCopiedFeedback();
        }).catch(() => {
          legacyCopy(key);
        });
      } else {
        legacyCopy(key);
      }
    }

    function legacyCopy(text) {
      const temp = document.createElement('textarea');
      temp.value = text;
      document.body.appendChild(temp);
      temp.select();
      try { document.execCommand('copy'); } catch (e) {}
      document.body.removeChild(temp);
      showCopiedFeedback();
    }

    // Feedback visual discreto no botão
    let copyTimer = null;
    function showCopiedFeedback() {
      const original = copyBtn.textContent;
      copyBtn.textContent = 'Copiado!';
      copyBtn.style.filter = 'brightness(1.06)';
      clearTimeout(copyTimer);
      copyTimer = setTimeout(() => {
        copyBtn.textContent = original;
        copyBtn.style.filter = '';
      }, 1600);
    }

    // Inicialização
    updateProgress();
    copyBtn.addEventListener('click', copyPix);

    // Acessibilidade: Enter focus no input também copia
    pixInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') copyPix();
    });
  </script>
